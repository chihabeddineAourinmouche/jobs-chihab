
<% include partials/header %>

	<div class="container">
		<div class="page-header">
			<h1><%= top_title %></h1>
			<input type='text' name='query' placeholder='Search by tag' id="search_text_zone"/>
			<button id="button" value="Add" id="search_button" onClick="">Search</button>
		</div>
		<div class="jumbotron" id="jt">
			<% for(var j = 0; j < job.length; j++){ %>
				<div>
					<h2><%= job[j].title %></h2>
					<div id='colContent'>
						<h6>Published on: <%= job[j].date %></h6>
						<h5><%= job[j].description %></h5>
						<h5>Contact information:</h5>
						<h5><b>Phone:</b> <%= job[j].phone %></h5>
						<h5><b>Email:</b> <%= job[j].email %></h5>
						<h5><b>Address:</b> <%= job[j].address %></h5>
						<h5><b>Tags:</b> <%= job[j].tags %></h5>
					</div>
					<% if(j < job.length -1 && job.length > 1){ %>
						<hr>
					<% } %>
				</div>
			<% } %>
		</div>
	</div>

<% include partials/footer %>